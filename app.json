{
  "id": "nl.joolee.homey.test",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Joolee's Test App"
  },
  "description": {
    "en": "Used for testing and proof of concepts, not for publishing!"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Joolee ðŸ˜€",
    "email": "athom@joolee.nl"
  },
  "drivers": [
    {
      "id": "icon-upload",
      "name": {
        "en": "Icon upload"
      },
      "class": "sensor",
      "capabilities": [],
      "images": {
        "large": "/drivers/icon-upload/assets/images/large.png",
        "small": "/drivers/icon-upload/assets/images/small.png"
      },
      "pair": [
        {
          "id": "uploader",
          "navigation": {
            "next": "done"
          }
        },
        {
          "id": "done",
          "template": "done"
        }
      ]
    },
    {
      "id": "trigger-test",
      "name": {
        "en": "Trigger test"
      },
      "class": "sensor",
      "capabilities": [],
      "images": {
        "large": "/drivers/icon-upload/assets/images/large.png",
        "small": "/drivers/icon-upload/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "rain_start",
        "title": {
          "en": "It starts raining"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=trigger-test"
          }
        ]
      }
    ]
  }
}